= simple_form_for @repair_group, html: { class: 'form-horizontal' }, remote: true do |f|
  .modal-header
    %a.close{'data-dismiss' => 'modal', href: '#'}
      %i.fa.fa-times-circle
    %h3= @repair_group.new_record? ? t('repair_groups.new.title') : t('repair_groups.edit.title')

  .modal-body
    = f.hidden_field :parent_id
    = f.input :name, autofocus: true

  .modal-footer
    = submit_button f
