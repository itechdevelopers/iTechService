:scss
  .queue-container {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    gap: 10px;
    height: 97vh;
    padding: 20px;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;

    .back-button {
      padding: 8px 16px;
      background-color: white;
      color: black;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      transition: box-shadow 0.3s ease;
    }

    .back-button:active {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .create-ticket {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 90%;
      text-align: center;
      border: 1px solid #ccc;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      background-color: #f9f9f9;
      cursor: pointer;
      height: 80%;

      &.hidden {
        display: none;
      }

      .create-ticket-form {
        display: flex;
        flex-direction: column;
        gap: 10px;
        width: 50%;

        .create-ticket-button {
          height: 100px;
          font-size: 1.8em;
          background-color: #45e656;
          color: #005e06;
          border-radius: 5px;
          cursor: pointer;
        }
      }
    }

    .queue-item {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 90%;
      text-align: center;
      border: 1px solid #ccc;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      background-color: #f9f9f9;
      cursor: pointer;

      &.hidden {
        display: none;
      }

      .queue-title {
        font-size: 24px;
        color: #333;
        margin-bottom: 10px;
      }

      .queue-annotation {
        font-size: 18px;
        color: #666;
      }
    }
  }