- if params[:form] == 'top_salable' and params[:is_group_only]
  $('#top_salable_salable_id').val("#{@product_group.id}");
  $('#top_salable_product_group_select').text("#{@product_group.name}");
  hideModal();
- else
  :plain
    $("#resource_table").html("#{j(render(params[:table_name] || 'products/table'))}");

    // Update search form's hidden group field
    var $searchForm = $('#search_form');
    var $groupField = $searchForm.find('input[name="group"]');
    if ($groupField.length > 0) {
      $groupField.val("#{@product_group.id}");
    } else {
      $searchForm.prepend('<input type="hidden" name="group" value="#{@product_group.id}">');
    }

    $('#product_choose_form  #product_items').hide();
    $('#product_choose_form #selected_product_group').val("#{@product_group.id}");
    $('#new_product_link').removeAttr('disabled');
    $('#new_product_link').attr('href', "#{new_product_path(product: {product_group_id: @product_group.id})}");
    window.initRepairServicesMultiselect();
    window.handleCheckboxes();
-#$('#new_product_group_link').attr('href', "#{new_product_group_path(product_group: {parent_id: @product_group.id})}");
