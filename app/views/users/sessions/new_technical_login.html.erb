<div class="elqueue_auth_page">
  <h2 class="title">Электронная очередь</h2>
  <%= form_with model: resource,
                scope: :user,
                url: user_sign_in_technical_path,
                local: true do |f| %>
    <%= f.password_field :password, class: "password-elqueue", autocomplete: "current-password" %>
    <%= f.submit "Вход", class: "submit-btn-elqueue" %>
  <% end %>
</div>

<style>
  .elqueue_auth_page {
    height:100%;
    text-align:center;
  }
  .title {
    margin-bottom:1rem;
  }
  .password-elqueue[type="password"] {
    height: 60px;
    width: 460px;
    font-size: 46px;
  }
  .submit-btn-elqueue[type="submit"] {
    height: 52px;
    width: 154px;
    font-size: 27px;
    margin-bottom: 10px;
    margin-left: 10px;
    padding-bottom: 4px;
  }
</style>