.product-add-photos
  %header
    %a.brand{href: "#{root_url}"}= logo_tag
    .name
      %h1= t(".title")
  .product-add-photos__content
    %ul
      %li
        = "Товар: #{@product.name}"
      %li
        = "Код: #{@product.code}"
      %li
        = "Сотрудник: #{current_user.short_name}"
    = form_for @product, url: product_photos_path(@product), method: :post do |f|
      = f.file_field :photos, multiple: true
      = f.submit t('.submit-photos')
:scss
  a.brand img {
    height: 80px;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 22px 0 22px;
    background: #eee;
    border: 10px solid #eee;
    border-radius: 2%;
  }
  .product-add-photos {
    padding: 10px;
    font-size: 48px;
    h1 {
      font-size: 48px;
      color: #333;
    }
    .product-add-photos__content {
      margin-top: 30px;
      max-width: 100%;
      text-align: center;

      ul {
        list-style: none;
        li {
          margin-bottom: 20px;
        }
      }

      input[type="file"], input[type="submit"] {
        margin-top: 30px;
        font-size: 40px;
      }

      input[type="file"]::file-selector-button {
        font-size: 40px;
        height: 54px;
      }
    }
  }
  @media screen and (-webkit-min-device-pixel-ratio:0) {
    input[type="file"] {
      font-size: 40px;
    }
    input[type="file"]::file-selector-button {
      font-size: 40px;
      height: 54px;
    }
  }